          <job name="Firefox">
            <tasks>
              <exec command="echo">
                <arg>"Tasks for running acceptance tests in Firefox executed here..."</arg>
              </exec>
            </tasks>
          </job>
          <job name="Chrome">
            <tasks>
              <exec command="echo">
                <arg>"Tasks for running acceptance tests in Chrome executed here..."</arg>
              </exec>
            </tasks>
          </job>
